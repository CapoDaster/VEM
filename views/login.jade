doctype html(lang='de')
head
   meta(charset='UTF-8')
   title VEM
   link(rel='stylesheet', href='./css/bootstrap.min.css')
   link(rel='stylesheet', href='./css/bootstrap-theme.min.css')
body
   main.container
      .jumbotron
         h1.text-center Willkommen im VEM
         .modal-dialog(style='margin-bottom:0')
            .modal-content
               .panel-heading
                  h3.panel-title Login
               .panel-body
                  form(role='form', action='/login', method='POST')
                     fieldset
                        .form-group
                           input.form-control(placeholder='Benutzername', name='username', type='type', autofocus='')
                        .form-group
                           input.form-control(placeholder='Passwort', name='password', type='password', value='')
                        // Change this to a button or input when using this as a form
                        button.btn.btn-large.btn-success(type='submit') Login
                        #message
                        if message
                          h3.text-center.error-message #{message}
      hr
      .row
         .col-sm-12
            footer
               p &copy; Copyright 2015 Simon Heeg

